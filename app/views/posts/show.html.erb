
<p>
  <strong>Pet Status: </strong>
  <%= @post.pet_status.status %>
</p>

<p>
	<img src=<%= @post.url %>
</p>


<p>
  <strong>Description: </strong>
  <%= @post.description %>
</p>

<p>
  <strong>Location: </strong>
  <%= @post.location %>
</p>

<% if @user == @post.user %>
	<td><%= link_to 'Delete', post_path(@post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    <%= link_to 'Edit', post_edit_path(@post) %>

<% end %>


<% if @user.id != @owner.id %>
  <% if @conversation %>
    <h3><%= link_to 'Message Post Owner', conversation_messages_path(@conversation)%></h3>
  <% else %>
    <%= @user.id %>
    <%= @owner.id %>
    <h3><%= link_to 'Message Post Owner', conversations_path(sender_id: @user.id, recipient_id: @owner.id), method: "post"%>
  <% end %>
<% end %>


<%= link_to 'Back', root_path %>

